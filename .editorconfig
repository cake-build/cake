; This file is for unifying the coding style for different editors and IDEs.
; More information at http://EditorConfig.org

root = true

[*]
end_of_line = CRLF

[*.ps1]
indent_style = space
indent_size = 2

[*.cs]
indent_style = space
indent_size = 4
dotnet_diagnostic.IDE0005.severity = error

[*.cake]
indent_style = space
indent_size = 4

[*.js]
indent_style = tab
indent_size = 2

# Verify settings
[*.{received,verified}.{txt,xml,json,cake}]
charset = "utf-8-bom"
end_of_line = lf
indent_size = unset
indent_style = unset
insert_final_newline = false
tab_width = unset
trim_trailing_whitespace = false