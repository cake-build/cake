{
  "version": "0.15.3-*",
  "dependencies": {
    "dotnet-test-xunit": "2.2.0-preview2-build1029",
    "Cake": {
      "target": "project"
    },
    "Cake.Core": {
      "target": "project"
    },
    "Cake.Testing": {
      "target": "project"
    },
    "Cake.Testing.Xunit": {
      "target": "project"
    },
    "StyleCop.Analyzers": {
      "version": "1.0.0",
      "type": "build"
    }
  },
  "configurations": {
    "Release": {
      "buildOptions": {
        "warningsAsErrors": true
      }
    }
  },
  "buildOptions": {
    "embed": [
      "Data/MonoScriptProcessor/ArrayInitializer/*",
      "Data/MonoScriptProcessor/Blocks/*",
      "Data/MonoScriptProcessor/Complex/*",
      "Data/MonoScriptProcessor/Mixed/*",
      "Data/MonoScriptProcessor/MixedComments/*",
      "Data/MonoScriptProcessor/Simple/*"
    ],
    "additionalArguments": [
      "/ruleset:../Test.ruleset",
      "/additionalfile:../stylecop.json"
    ]
  },
  "frameworks": {
    "net451": {
      "dependencies": {
        "NSubstitute": "1.10.0.0"
      },
      "frameworkAssemblies": {
        "System.Runtime": {
          "type": "build"
        }
      }
    },
    "netcoreapp1.0": {
      "buildOptions": {
        "define": [
          "NETCORE"
        ]
      },
      "imports": "dnxcore50",
      "dependencies": {
        "NSubstitute": "2.0.0-rc",
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.0.0"
        }
      }
    }
  },
  "testRunner": "xunit"
}